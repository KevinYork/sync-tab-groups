{
    "manifest_version": 2,
    "version": "0.1",

    "name": "Tabspace",
    "description": "Add an icon in the tabs panel for grouping tabs and switching between groups.",
    "homepage_url": "https://github.com/Morikko/tabspace",
    "icons": {
        "64": "icons/tabspace-active-64.png",
        "32": "icons/tabspace-active-32.png"
    },

    "applications": {
      "gecko": {
        "id": "sync-tab-groups@eric.masseran"
      }
    },

    "permissions": [
        "bookmarks", "tabs", "storage", "sessions"
    ],

    "background": {
        "scripts": ["background/utils.js", "background/localstorage.js", "background/groupmanager.js",
          "background/windowmanager.js", "background/tabmanager.js", "background/controller.js"]
    },

    "default_locale": "en",

    "browser_action": {
        "default_icon": "icons/tabspace-32.png",
        "default_title": "Tabspace",
        "default_popup": "popup/popup.html"
    }
}
